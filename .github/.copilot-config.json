{
  "version": "1.0",
  "tools": {
    "github": {
      "enabled": true,
      "description": "GitHub MCP server for repository operations"
    }
  },
  "runtime": {
    "go": {
      "version": "1.25",
      "enabled": true
    }
  },
  "context": {
    "include": [
      ".github/copilot-instructions.md",
      "README.md",
      "CONTRIBUTING.md",
      "pkg/**/*.go",
      "*.go",
      "go.mod"
    ],
    "exclude": [
      "vendor/",
      "*.test",
      "coverage.*"
    ]
  }
}
